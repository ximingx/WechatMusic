/*轮播图设置*/
.banner {
  border-radius: 20rpx;
  overflow: hidden;
}

.banner .item .banner-image {
  width: 100%;
}

.recommend-list {
  display: flex;
    flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  box-sizing: border-box;
  width: 45vw;
  margin: 18rpx 0;
  padding: 3rpx 0;
}
