.item-container {
  width: 45vw;
  margin: 4px 6px;
}

.item-container .item-album {
  position: relative;
  width: 100%;
  height: 100%;
}

.item-container .item-album .item-album-image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}

.item-container .item-album .item-info {
  font-size: 10px;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  margin-bottom: 7px;
  padding: 3px;
  color: #efefef;
  background: rgba(0, 0, 0, 0.15);
}

.item-container .item-count {
  position: relative;
  left: 20px;
}

.item-container .item-count .item-image {
  position: absolute;
  top: 0;
  left: -18px;
  width: 15px;
  height: 15px;
  border-radius: 50%;
}

.item-container .item-name {
  font-size: 12px;
  font-weight: 300;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 最后显示的行数 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


