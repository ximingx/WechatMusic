.item {
  width: 25vw;
}

.item .top {
  height: 25vw;
  position: relative;
}

.item .top .image {
  width: 100%;
  border-radius: 24rpx;
  object-fit: contain;
}

.item .top .count {
  position: absolute;
  bottom: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  padding: 8rpx;
  border-radius: 24rpx;
  font-size: 18rpx;
  font-weight: 700;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
}

.item .bottom { 
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  /* 最后显示的行数 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  font-weight: 300;
}