<wxs src="/utils/format.wxs" module="format"></wxs>

<view class="item">
    <view class="top">
        <image class="image" src="{{item.coverImgUrl}}" mode="widthFix"></image>
        <view class="count">{{format.formatCount(item.playCount)}}</view>
    </view>
    <view class="bottom">
        {{item.name}}
    </view>
</view>